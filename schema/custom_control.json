{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "properties": {
        "content": {
            "$ref": "main.json"  
        },
        "params": {
            "type": "array",
            "items": {
                "properties": {
                    "key": {
                        "type":"string"
                    },
                    "path": {
                        "type":"string"
                    }
                },
                "required": ["key", "path"]
            }
        },
        "custom_data": {
            "type": "array",
            "items": {
                "properties": {
                    "key": {
                        "type":"string"
                    },
                    "default": {}
                },
                "required": ["key"]
            }
        }
    },
    "required": ["content"]
}